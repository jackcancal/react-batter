@import "../stylus/mixins.styl"
.title-good-grid
  width 100%
  background-color: #fff;
  margin-top (20/$rem)
  .good-grid-content
    width 100%
    .good-grid-ul
      width 100%
      box-sizing border-box
      padding 0 (10/$rem)
      display flex
      flex-wrap wrap
      .good-grid-item
        width 50%
        height (587/$rem)
        box-sizing border-box
        display: flex
        flex-direction column
        justify-content space-between
        padding 0 (5/$rem) (30/$rem) (5/$rem)
        .good-grid-img
          width 100%
          height (355/$rem)
          background-color: #eee;
        .good-grid-wrap
          display flex
          height (202/$rem)
          flex-direction column
          justify-content space-between
          .good-grid-decs
            width 100%
            background-color: rgb(241, 236, 226);
            box-sizing border-box
            padding (20/$rem) (10/$rem)
            font-size 12px
            line-height (24/$rem)
          .good-grid-price
            margin-top (20/$rem)
            padding-left (15/$rem)
            >p
              font-size 12px
              color white
              text-align center
              line-height (30/$rem)
              display inline-block
              background-color: rgb(244, 143, 24);
              >span
                display inline-block
                transform scale(.8)
          .good-grid-name
            width: 100%
            height (48/$rem)
            padding 0 (10/$rem)
            margin-top (10/$rem)
            font-size 14px
          .good-price
            font-size (32/$rem)
            width: 100%;
            height: (32$rem);
            padding 0 (10/$rem)
            color rgb(186, 57, 61)

